<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="nameTokens" type="biz.accelsis.waitara.client.NameTokens" />
    <ui:style>
        header {
            background-color: #3eb0c7;
            padding: 0px 20px;
            width: auto;
        }
        
        header h1 {
            padding-top: 5px;
            padding-left: 50px;
            border-bottom: none;
        }
        
        .roundedWhiteBox {
            background-color: white;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            box-shadow: 2px 2px 2px #62635e;
            -moz-box-shadow: 2px 2px 2px #62635e;
            -webkit-box-shadow: 2px 2px 2px #62635e;
        }
        
        .mainPanel {
            margin: 20px 2px 20px 20px;
        }
    </ui:style>

    <g:DockLayoutPanel unit="PX">
        <g:north size="48">
            <g:HTMLPanel>
                <header>
                    <h1>Waitara Task Management - MOBILE</h1>
                </header>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel ui:field="mainPanel" addStyleNames="{style.mainPanel} {style.roundedWhiteBox}"></g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 