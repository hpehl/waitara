<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="nameTokens" type="biz.accelsis.waitara.client.NameTokens" />
    <ui:style>
        nav {
            margin: 50px 30px 20px 0px;
            border: 1px solid #93CB2B;
        }
        
        nav a {
            font-size: 12px;
            color: #93CB2B;
            background-color: #e9ffbf;
            display: block;
            line-height: 20px;
            text-transform: capitalize;
            padding: 5px 5px 5px 10px;
            border-bottom: 1px solid #c4e96e;
        }
        
        nav a.last {
            border-bottom: none;
        }
        
        nav a:hover,aside nav a.selected {
            color: white;
            background-color: #93CB2B;
        }
    </ui:style>

    <g:HTMLPanel>
        <nav>
            <g:InlineHyperlink ui:field="tasks" targetHistoryToken="{nameTokens.tasks}">Tasks</g:InlineHyperlink>
            <g:InlineHyperlink ui:field="newTask" targetHistoryToken="{nameTokens.newTask}">New Task</g:InlineHyperlink>
            <g:InlineHyperlink ui:field="settings" targetHistoryToken="{nameTokens.settings}">Settings</g:InlineHyperlink>
            <g:InlineHyperlink ui:field="help" targetHistoryToken="{nameTokens.help}">Help</g:InlineHyperlink>
            <g:InlineHyperlink ui:field="about" targetHistoryToken="{nameTokens.about}" addStyleNames="{style.last}">About</g:InlineHyperlink>
        </nav>
    </g:HTMLPanel>
</ui:UiBinder> 