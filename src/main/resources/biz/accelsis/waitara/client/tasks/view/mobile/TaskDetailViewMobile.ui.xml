<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:image field="details" repeatStyle="Both" src="../../../resources/details.png" />
    <ui:style>
        @sprite div.details {
            box-sizing: border-box;
            gwt-image: "details";
            height: auto;
            padding: 10px;
            width: 100%;
            -webkit-box-sizing: border-box;
        }
        
        div.details>ul {
            background-color: white;
            border: 1px solid #D9D9D9;
            margin: 0px 0px;
            margin-right: 10px;
            padding: 0px;
            width: 298px;
            -webkit-border-radius: 8px;
        }
        
        div.details>ul>li {
            color: black;
            border-bottom: 1px #D9D9D9 solid;
            list-style-type: none;
            padding: 10px;
            -webkit-tap-highlight-color: cornflowerblue;
        }
    </ui:style>

    <g:HTMLPanel addStyleNames="{style.details}">
        <ul>
            <li ui:field="name"></li>
            <li ui:field="description"></li>
            <li ui:field="dueDate"></li>
            <li ui:field="finished"></li>
        </ul>
    </g:HTMLPanel>

</ui:UiBinder>